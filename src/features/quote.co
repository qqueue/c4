onclick = !(e) ->
  e.preventDefault!
  selection = window.getSelection!toString!trim!
  selection = ">#selection\n" if selection

  $ \comment
    &value += ">>#{@textContent}\n#selection"
    &focus!

onready !->
  for id of $$ '.id'
    id.addEventListener \click onclick

onpostinserted !->
  it.detail.post.querySelector '.id' .addEventListener \click onclick

