export post = ->
  classes = ''
  classes += 'imagepost ' if it.image
  classes += 'sage ' if it.sage
  classes += 'tripcoded ' if it.tripcode 
  if it.capcode
    classes += if it.capcode is '## Admin'
      'admin '
    else 'mod '
  classes += 'uid ' if it.uid 
  classes += that if it.tripcoded
  classes

export topic = ->
  classes = 'thread '
  classes += 'sticky ' if it.sticky
  classes += 'closed ' if it.closed
  classes